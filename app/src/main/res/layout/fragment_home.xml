<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="World Information"
        android:textColor="@color/textGreenColor"
        android:padding="20dp"
        android:textSize="25sp"
        android:background="@drawable/edit"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />



    <lecho.lib.hellocharts.view.PieChartView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="250dp"
        android:id="@+id/chart"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/totalLabelColor"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/totalcaselabel"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:text="Total cases"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/deathLabelColor"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/deathcaseslabel"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Total Death      "
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/serouusLabelColor"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/seriouscaseslabel"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:text="Active cases"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/recoveredLabelColor"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/recoverycaseslabel"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Total Recovered"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:background="@drawable/edit"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Affected Countries"
            android:id="@+id/sa"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6,546,842"
            android:textAlignment="center"
            android:id="@+id/totalTested"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"

            android:textColor="#43E272"

            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:gravity="center_horizontal" />



    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:background="@drawable/edit"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Confirmed Cases"

                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginLeft="0dp"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6,546,842"
                android:textAlignment="center"
                android:id="@+id/totalConfirmed"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:textColor="#43E272"

                android:layout_marginLeft="30dp"
                android:textSize="30sp"
                android:gravity="center_horizontal" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:layout_toLeftOf="@id/increament"
                    android:text="Daily Increament: "
                    android:textColor="#43E272"
                    android:textSize="17sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/todayNewCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/todayNewCases"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="656565"
                    android:textColor="#43E272"
                    android:textSize="17sp" />


            </LinearLayout>
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:background="@drawable/edit"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Recovered"

            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6,546,842"
            android:textAlignment="center"
            android:id="@+id/totalRecovered"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"

            android:textColor="#43E272"

            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:gravity="center_horizontal" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:background="@drawable/edit"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Deceased"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6,546,842"
            android:textAlignment="center"
            android:id="@+id/totalDeceased"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textColor="#43E272"

            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:gravity="center_horizontal" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_toLeftOf="@id/increament"
                android:text="Daily Increament: "
                android:textColor="#43E272"
                android:textSize="17sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/todayDeath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/todayDeath"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="656565"
                android:textColor="#43E272"
                android:textSize="17sp" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:background="@drawable/edit"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Serious Cases"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6,546,842"
            android:textAlignment="center"
            android:id="@+id/totalSerious"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textColor="#43E272"

            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:gravity="center_horizontal" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:background="@drawable/edit"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Currently Infected"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6,546,842"
            android:textAlignment="center"
            android:id="@+id/totalInfected"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textColor="#43E272"

            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:gravity="center_horizontal" />

    </LinearLayout>












</LinearLayout>

</ScrollView>